<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            app:startDestination="@+id/home_dest">

    <fragment
            android:id="@+id/home_dest"
            android:name="ca.thirdgear.homeautomation.views.MainMenu"
            android:label="@string/app_name"
            tools:layout="@layout/main_menu_fragment"/>

    <fragment
            android:id="@+id/homeControls_dest"
            android:name="ca.thirdgear.homeautomation.views.HomeControls"
            android:label="@string/app_name"
            tools:layout="@layout/home_controls_fragment"/>

    <fragment android:id="@+id/lighting_dest"
              android:name="ca.thirdgear.homeautomation.views.Lighting"
              android:label="@string/app_name"
              tools:layout="@layout/lighting_fragment"/>

    <fragment android:id="@+id/garage_dest"
              android:name="ca.thirdgear.homeautomation.views.Garage"
              android:label="@string/app_name"
              tools:layout="@layout/garage_fragment"/>

    <fragment android:id="@+id/settings_dest"
              android:name="ca.thirdgear.homeautomation.views.Settings"
              android:label="@string/app_name"
              tools:layout="@layout/settings_fragment"/>

    <fragment android:id="@+id/system_status_dest"
              android:name="ca.thirdgear.homeautomation.views.SystemStatus"
              android:label="@string/app_name"
              tools:layout="@layout/system_status_fragment"/>
</navigation>
